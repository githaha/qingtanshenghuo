/* components/homeForumItem/homeForumItem.wxss */
.forumItem{
  /* 上下结构 */
  display: flex;
  flex-direction: column;
  border: solid 1px rgb(241, 237, 237);
  border-radius: 8px;
  background: white;
  width: 89%;
  margin-left: 5%;


}
.observer {
  height: 1rpx;
}
/* 布局上 */
.forumItemTop{

  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.DiaryDrUserIntro{
  margin-top: 20rpx;
}

.forumItemTopRB{
  color: rgb(114, 113, 113);
  font-size: 26rpx;
  margin: 10rpx 15rpx 10rpx 30rpx;
}

/* 布局下 */
.forumItemImg-default{
  display:flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  width: 100%;
  height: auto;
  
}
.forumItemImg-multi{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  width: 100%;
  height: auto;
  
}
.forumItemImage-default{
  display: inline-block;
  width: 94%;
  height: 300rpx;
}
.forumItemImage-multi{
  display: inline-block;
  width: 30%;
  height: 200rpx;
  margin: 10rpx;
}
.forumItemBom{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin-top: 10px;
}
.forumItemTime{
  font-size: 26rpx;
  color: darkgray;
  margin-left: 10px;
}
.forumItemBomR{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 10px;
}
.forumItemBomLab_Img{
  margin-right: 20rpx;
}
.videoClass{
  width: 100%;
  height: 350rpx;
}
.videoClass video{
  width: 100%;
  height: 350rpx;
}
.controls{
  width: 100%;
  height: 350rpx;

}

.videoHoverPlay{
  
  right: 40rpx;
  bottom: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
