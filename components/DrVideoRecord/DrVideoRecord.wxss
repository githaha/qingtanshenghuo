/* components/DrVideoRecord/DrVideoRecord.wxss */
.container{
  width: 100%;
  height: 100%;
  justify-content: center;
  background: rgb(51, 52, 53);
}

.cameraC{
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 1;
  margin-top: -44px;
}
.libraryC{
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 1;
  margin-top: 0px;
}
.selectBtnTypeC{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 140px;
  height: 44px;
  z-index: 100;
  margin-left: calc(50% - 70px);

}

.btnTypeNormal{
  width: 64px;
  height: 35px;
  font-size: 35rpx;
  font-weight: bold;
  border-color: transparent;
  background: transparent;
  color: rgb(255, 255, 255);
}
.btnTypeSelected{
  width: 64px;
  height: 35px;
  font-weight: bold;
  font-size: 35rpx;
  border-color: transparent;
  background: transparent;
  color: rgb(207, 42, 42);
}

button::after{
border: none;
}
.recordTime{
  position: fixed;
  width: 200rpx;
  height: 40rpx;
  margin-left: calc(50% - 100rpx);
  text-align: center;
  color: white;
  font-size: 24rpx;
  bottom: 220rpx;
}
.takeVideo{
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  border-radius: 65rpx;
  background: rgb(214, 57, 57);
  margin-left: calc(50% - 65rpx);
  border: solid white 5rpx;
  bottom: 80rpx;
}
.takeVideoing{
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  border-radius: 65rpx;
  background: rgb(214, 57, 57);
  margin-left: calc(50% - 65rpx);
  border: solid white 5rpx;
  bottom: 80rpx;
}
.recordStatusImg{
  width: 60rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.recordStatusFinish{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
   position: fixed;
   bottom: 100rpx;
  width: 60rpx;
  margin-left: calc(50% + 150rpx);
}
.recordStatusFinish cover-image{
  width: 60rpx;
  height: 60rpx;
}
.recordStatusFinish cover-view{
  color: white;
  font-size: 22rpx;

}